{{template "base" .}}
{{define "body"}}
<div>
    {{if .AuthenticatedUser}}
    <h2>Hello, {{.AuthenticatedUser.Name}}. You have been logged in.</h2>
    <a href="/submit">Submit Post</a>
    <a href="/newcategory">Create Category</a>
    {{else}}
    <h2>Hello!</h2>
	{{end}}
	<div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-2 justify-content-start">
		{{range .Categories}}
		<div class="col">
			<div class="card border-warning category-card h-100">
				<div class="card-body">
					<h5 class="card-title">{{.Title}}</h5>
					<p class="card-text">{{.Description}}</p>
				</div>
				<div class="card-footer">
					<small class="text-muted">341 active threads</small>
				</div>
			</div>
		</div>
		{{end}}
	</div>
</div>
{{end}}
